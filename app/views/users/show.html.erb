<p style="color: green"><%= notice %></p>

<div class="show-item">
  <%= render @user %>
</div>

<% if @user == current_user %>
  <%= button_to t('views.common.edit', name: User.model_name.human.downcase), edit_user_path(@user), method: :get %>
  <%= button_to t('views.common.destroy', name: User.model_name.human.downcase), @user, data: { confirm: t('devise.registrations.edit.are_you_sure'), turbo_confirm: t('devise.registrations.edit.are_you_sure') }, method: :delete %>
  <br>
<% end %>

<nav class="page-nav">
  <%= link_to t('views.common.back', name: i18n_pluralize(User.model_name.human.downcase)), users_path %>
</nav>
