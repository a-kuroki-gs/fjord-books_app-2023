<div>
  <p>
    <strong><%= Comment.human_attribute_name(:creator) %>:</strong>
    <% user = User.find(comment.user_id) %>
    <%= user.name.presence || user.email %>
  </p>

  <p>
    <strong><%= Comment.human_attribute_name(:content) %>:</strong>
    <br>
    <%= safe_join(comment.content.split("\n"),tag(:br)) %>
  </p>

  <p>
    <strong><%= Comment.human_attribute_name(:created_at) %>:</strong>
    <%= l comment.created_at, format: :long %>
  </p>

  <% if comment.user_id == current_user.id %>
    <%= button_to t('views.common.destroy', name: Comment.model_name.human.downcase), polymorphic_path(comment), method: :delete %>
  <% end %>
</div>
